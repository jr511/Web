<%= form_tag("/login", method: "post") do %>
<div class="field">
<%= label_tag :name %>
<%= text_field_tag :name, params[:name] %>
</div>
<div class="field">
<%= label_tag :password %>
<%= password_field_tag :password, params[:password] %>
</div>
<div class="actions"><%= submit_tag "Log in" %></div>
<% end %>