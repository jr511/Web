<h1>Showing Collection</h1>
<p>
  <strong>Title:</strong>
  <%= @collection.title %>
</p>

<p>
  <strong>User:</strong>
  <%= @collection.user.name %>
</p>

<p>
  <strong>Shared:</strong>
  <%= @collection.shared %>
</p>

<%= link_to 'Edit', edit_collection_path(@collection) %> |

<% if @collection.user.name == session[:user] %>
   <%= link_to 'Destroy', @collection, method: :delete, data: { confirm: 'Are you sure?' }  %> |
<% end %>

<%= link_to 'Back', collections_path %>
