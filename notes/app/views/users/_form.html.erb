<!-- Custom styles for this template -->
<link href="https://getbootstrap.com/docs/4.3/examples/sign-in/signin.css" rel="stylesheet">
</head>
<body class="text-center">
  <div class="form-signin">
    <%= form_with(model: user, local: true) do |form| %>
    <img class="mb-4" src="https://getbootstrap.com/docs/4.3/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Register</h1>
    <label for="inputUsername" class="sr-only">Username</label>
    <input type="text" id="username" class="form-control" placeholder="Username" required autofocus <%= form.text_field :name %>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword" class="form-control  mb-0" placeholder="Password" required <%= form.text_field :password %>
    <label for="repeatPassword" class="sr-only">Repeat password</label>
    <input type="password" id="repeatPassword" class="form-control" placeholder="Repeat password" required <%= form.text_field :confirm_password %>
    <div class="space mb-3">
    </div>
    <div class="container">
      <div class="row">
        <div class="col-sm">
          <a href="/" class="btn btn-secondary btn-block" role="button" style="color:white">Back</a>
        </div>
        <div class="col-sm">
          <button type="submit" class="btn btn-primary btn-block" onclick=<%= form.submit %>Create</button>
        </div>
      </div>
    </div>
    <p class="mt-5 mb-3 text-muted">&copy; 2017-2019</p>
    <% end %>
  </div>
</body>
</html>
